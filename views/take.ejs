                            <div class="col">
                                <div class="image-container">
                                    <img src="pics/<%= foundExam.exam_questions[i].exam_question_pic %>">
                                </div>
                            </div>
                        <% } %>

                    </div>
                </div>
            <% } %>

            <button class="secondary-btn mt-3" type="submit">ثبت و پایان آزمون</button>
        </form>
    </div>
</section>

<%- include("inc/footer") %>
</body>
</html>
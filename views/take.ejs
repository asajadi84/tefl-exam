<section class="container-fluid">
    <div class="container">
        <h2 class="mt-4 mb-2">آزمون <%= foundExam.exam_title %></h2>
        <div class="d-flex align-items-center justify-content-between flex-wrap mt-4 mb-2">
            <p>
                <strong>تعداد سوالات:</strong>
                <%= foundExam.exam_questions.length %>
            </p>
            <p>
                <strong>مهلت پاسخگویی:</strong>
                <%= foundExam.exam_time %> دقیقه
            </p>
        </div>
        <div class="card card-container">
